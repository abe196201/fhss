<% if current_user %>
<!DOCTYPE html>
<html lang="en">
<head>
	<title>American Home Security Systems | Make A Payment</title>
</head>
<body>

	<%= render 'layouts/nav' %>

	<section class="testimonials wrapper">

		<span class="sep_line sep_top">
		</span>

		<%= form_tag payments_path, id: 'card-details' do %>
		  <div class="payment-errors"></div>

		  <div class="t">
		    <p>Card Number: <br>
		    <input id="card-number" type="text" data-stripe="number" /></p>
		  </div>

		  <div>
		    <p>Card Expiration Month:<br>
		    <input id="card-exp-month" type="text" data-stripe="exp_month" /></p>
		  </div>

		  <div>
		    <p>Card Expiration Year:<br>
		    <input id="card-exp-year" type="text" data-stripe="exp_year" /></p>
		  </div>

		  <div>
		    <p>CVC:<br>
		    <input id="card-cvc" type="text" data-stripe="cvc" /></p>
		  </div>

		  <div>
		    <p>Payment Type: <br><i>(only choose basic monitoring if you already have a home security system)</i><br>
		    <select id="payment-type" name="payment_type">
		      <option value="monthly">Basic security, $39.95/month</option>
		      <option value="monthly_monitoring">Basic monitoring, $14.95/month</option>
		    </select></p>
		  </div>

		  <div>
		    <input type="submit" value="Pay Now" />
		  </div>
		<% end %>

		<span class="sep_line sep_bottom"></span>

	</section><!--  End Testimonials  -->

</body>
</html>
<% end %>