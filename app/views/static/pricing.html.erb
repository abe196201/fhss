<html lang="en">
	<head>
		<title>American Home Security Systems | Pricing</title>
	</head>

	<body class="preload" data-spy="scroll" data-offset="0" data-target="#navigation">

	<%= render 'layouts/nav' %>

	<section class="billboard">
		<div class="wrapper">
			<div class="caption">
				<p style="text-align:center">Choose the plan that fits your budget and your needs.
			</div>
		</div>
	</section><!--  End Billboard  -->

	<section id="home" name="home"></section>


	<section id="desc" name="desc"></section>
	<!-- INTRO WRAP -->
